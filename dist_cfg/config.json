{
  "title" : "SpringBoard-ZK",
  "dependencies" : {
    "pngjs3": "^5.1.3"
  },
  "setups" : [
    {
      "package": {
        "id": "latest-win",
        "display": "Latest",
        "platform": "win32"
      },
      "downloads": {
        "games" : ["sb-zk:test", "sbc:test", "zk:stable"],
        "resources": [
          {
              "url": "https://springrts.com/dl/buildbot/default/master/105.0/win32/spring_105.0_win32-minimal-portable.7z",
              "destination": "engine/105.0 master",
              "extract": true
          }
        ]
      },
      "launch": {
        "game": "rapid://sb-zk:test",
        "map": "sb_initial_blank_10x8",
        "engine": "105.0 master",
        "map_options": {
          "new_map_x": 10,
          "new_map_y": 8
        },
        "game_options": {
          "MapSeed": 42
        }
      }
    },

    {
      "package": {
        "id": "latest-linux",
        "display": "Latest",
        "platform": "linux"
      },
      "downloads": {
        "games" : ["sb-zk:test", "sbc:test", "zk:stable"],
        "resources": [
          {
              "url": "https://springrts.com/dl/buildbot/default/master/105.0/linux32/spring_105.0_minimal-portable-linux32-static.7z",
              "destination": "engine/105.0 master",
              "extract": true
          }
      ]
      },
      "launch": {
        "game": "rapid://sb-zk:test",
        "map": "sb_initial_blank_10x8",
        "engine": "105.0 master",
        "map_options": {
          "new_map_x": 10,
          "new_map_y": 8
        },
        "game_options": {
          "MapSeed": 42
        }
      }
    },
    {
      "package": {
        "id": "dev",
        "display": "Development"
      },
      "downloads": {
        "engines" : [ "105.0 master" ]
      },
      "auto_start" : false,
      "no_downloads" : true,
      "load_dev_exts": false,
      "launch": {
        "game": "SpringBoard ZK $VERSION",
        "map": "sb_initial_blank_10x8",
        "map_options": {
          "new_map_x": 10,
          "new_map_y": 8
        },
        "game_options": {
          "MapSeed": 42
        }
      }
    },
    {
      "package": {
        "id": "asset-download",
        "display": "Asset Download(~1.8GB)"
      },
      "downloads": {
        "resources": [
          {
            "url": "https://spring-launcher.ams3.digitaloceanspaces.com/core_v1.zip",
            "destination": "springboard/assets/core-v1",
            "extract": true
          }
        ]
      }
    }
  ]

}
